<UserControl x:Class="ILSport.Custom.BangsTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ILSport.Custom"
             mc:Ignorable="d"
             d:DesignHeight="140" d:DesignWidth="560">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/DefaultPattern.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource MainTitle.Border}">
            <TextBlock Style="{StaticResource MainTitle.Text}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       TextAlignment="Center">
                Главная
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
