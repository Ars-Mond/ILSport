<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="BaseStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="Border" x:Key="ListDataBrick.Border">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Background" Value="{StaticResource ColorBrush.Gray}"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="ListDataBrick.Type" BasedOn="{StaticResource BaseStyle.Footnote}">
    </Style>
    
    <Style TargetType="TextBlock" x:Key="ListDataBrick.Value" BasedOn="{StaticResource BaseStyle.Headline1}">
    </Style>
    
    <Style TargetType="TextBlock" x:Key="ListDataBrick.Date" BasedOn="{StaticResource BaseStyle.Footnote2}">
    </Style>
</ResourceDictionary>